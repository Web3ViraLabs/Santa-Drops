// schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  token     String   @unique
  signature String?
  image     String?
  createdAt DateTime @default(now())
  wallets   Wallet[] // Relation to multiple wallets
}

model Wallet {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  address String @unique
  user    User   @relation(fields: [userId], references: [id]) // Relation to one user
  userId  String @db.ObjectId
}
