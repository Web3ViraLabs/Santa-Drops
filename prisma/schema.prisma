// schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String  @unique
  signature String?

  image     String?
  createdAt DateTime @default(now())

  wallets Wallet[]
}

model Wallet {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  address String @unique

  chains   Chain[]  @relation(fields: [chainIds], references: [id])
  chainIds String[] @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Chain {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String // e.g., Ethereum, Polygon, etc.
  image String? // Optional image of the chain

  wallets   Wallet[] @relation(fields: [walletIds], references: [id])
  walletIds String[] @db.ObjectId
}
